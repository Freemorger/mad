# debug build (comment on this line will be printed as recipe help)
recipe debug { 
    CC = gcc # declare variable (string array basically)

    # line break also supported 
    INPUT = testdir/*.c \ 
        file.c
    OUTPUT = program
    # D ?= echo hi # assign command output to D 

    # CMD echo .D
    # CMD echo .MAD_VERSION # print MAD version
    CMD .CC .INPUT -o .OUTPUT # run command
} end;

# prints all markdown files
recipe echofiles {
    FILES = *.md 

    CMD echo .FILES
} end;
